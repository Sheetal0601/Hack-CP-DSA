   #include<bits/stdc++.h>
   using namespace std;
    
    void run_fun()
    {
       long long  int n;cin>>n;
       long long int s=0,in;
        for(long long int i=0;i<n;i++)
        {
         cin>>in;
         s+=in;
        }
        long long int fir=s%n;
        long long int sec=(n-s%n);
        cout<<fir*(sec)<<endl;
     
    }
    int main() 
    {
    ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
    int t; cin>>t;
    while(t--)
    {
       run_fun();
    }
    return 0;
    
    }
